<form method="POST" name="Sign">
    <label for="firstName">First name:</label><br />
    <input type="text" id="first" name="first" value="{{first_name}}" /><br />
    <label for="lastName">Last name:</label><br />
    <input type="text" id="lastName" name="last" value="{{last_name}}" /><br />
    <label for="email">Enter your Email:</label>
    <input type="email" id="email" name="email" value="{{email}}" required /><br
    />
    <label for="password">Password (8 characters minimum):</label>
    <input
        type="password"
        id="password"
        name="password"
        minlength="8"
        value=""
        required
    />
    <br />
    <label for="age">Age:</label><br />
    <input type="text" id="age" name="age" value="{{age}}" /><br />
    <label for="city">City:</label><br />
    <input type="text" id="city" name="city" value="{{city}}" /><br />
    <label for="homepage">Homepage:</label><br />
    <input type="text" id="homepage" name="homepage" value="{{homepage}}" /><br
    />

    <button type="submit" class="signupbtn">Sign Up</button>
    <br />
    <div class="edit-profile">
        <input class="edit" type="submit" value="submit" />
    </div>
</form>