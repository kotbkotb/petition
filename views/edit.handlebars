<form method="POST" name="Sign">
    <label for="firstName">First name:</label><br />
    <input type="text" id="first" name="first_name" value="{{first_name}}" /><br
    />
    <label for="lastName">Last name:</label><br />
    <input type="text" id="lastName" name="last" value="{{last_name}}" /><br />
    <label for="email">Enter your Email:</label>
    <input type="text" id="email" name="email" value="{{email}}" required /><br
    />
    <label for="password">Password (8 characters minimum):</label>
    <input
        type="password"
        id="password"
        name="password"
        minlength="8"
        value=""
    />
    <br />
    <label for="age">Age:</label><br />
    <input type="text" id="age" name="age" value="{{age}}" /><br />
    <label for="city">City:</label><br />
    <input type="text" id="city" name="city" value="{{city}}" /><br />
    <label for="homepage">Homepage:</label><br />
    <input type="text" id="homepage" name="homepage" value="{{url}}" /><br />

    <button type="submit" class="signupbtn">Submit</button>
    <br />
    <div class="edit-profile">

    </div>
</form>